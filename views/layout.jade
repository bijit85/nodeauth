doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='author' content='')
    title=title
    // Favicon
    link(rel='icon' type='image/x-icon' href='assets/favicon.ico')
    style.
      @import url('https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@300&family=Ubuntu:wght@300&display=swap');

    // Core theme CSS (includes Bootstrap)
    link(href='/stylesheets/bootstrap.css' rel='stylesheet')
    link(href='/stylesheets/style.css' rel='stylesheet')

    body
      //Responsive navbar
      nav.navbar.navbar-expand-lg.navbar-dark.bg-success
        .container
          a.navbar-brand(href='#') NodeAuth Project
          button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.nav.me-auto.mb-2.mb-lg-0
              li.nav-item(class=(title === 'Members' ? 'active' : ''))
                a.nav-link(href='/') Members
            ul.nav.navbar-nav.navbar-right
              if !user
                li.nav-item(class=(title === 'Register' ? 'active' : ''))
                  a.nav-link(href='/users/register') Register
                li.nav-item(class=(title === 'Log In' ? 'active' : ''))
                  a.nav-link(href='/users/login') Log In
            ul.nav.navbar-nav.navbar-right
              if user
                li
                  a.nav-link(href='/users/logout') Log Out

      // Page content
      .container
        !=messages()
        block content

      footer.me-auto
        p &copy; 2021, All rights reserved
    // JQuery
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    // Bootstrap core JS
    script(src='/javascripts/bootstrap.js')